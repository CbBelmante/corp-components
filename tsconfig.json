{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Build */
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,

    /* JSX */
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths*/
    "baseUrl": ".",
    "paths": {
          "@/*": [
                "./src/*"
          ],
          "@playground/*": [
                "./playground/*"
          ],
          "@docs/*": [
                "./docs/*"
          ],
          "@scripts/*": [
                "./scripts/*"
          ],
          "@assets/*": [
                "./src/assets/*"
          ],
          "@generated/*": [
                "./src/generated/*"
          ],
          "@components/*": [
                "./src/components/*"
          ],
          "@base/*": [
                "./src/components/base/*"
          ],
          "@shadcn/*": [
                "./src/components/base/shadcn/*"
          ],
          "@corp/*": [
                "./src/components/corp/*"
          ],
          "@composables/*": [
                "./src/composables/*"
          ],
          "@utils/*": [
                "./src/utils/*"
          ],
          "@types/*": [
                "./src/types/*"
          ],
          "@locales": [
                "./src/locales/index"
          ]
    },

    /* Build info */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "playground/**/*.ts", "playground/**/*.vue", "docs/**/*.ts", "docs/**/*.vue"],
  "exclude": ["node_modules", "dist", ".history"]
}
